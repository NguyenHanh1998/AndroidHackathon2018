<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.hanh.ava_hackathon18.MainActivity">


    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_destination" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="40dp">

            <AutoCompleteTextView
                android:id="@+id/edtDesti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/edtplace"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingTop="@dimen/padding_small"
                android:singleLine="true"
                android:textSize="@dimen/text_size_big" />

            <ImageView
                android:id="@+id/imgClearDesti"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imgShowDetail"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_location_detail"
        android:layout_below="@+id/cardSearch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp" />
    <ImageView
        android:id="@+id/imgPlaceBynear"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_place_bynear"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgShowDetail"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnActionFloat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/layoutDirection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_my_location"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/layoutDirection"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_round_corner_solid_white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgDirection"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_go_direction"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toEndOf="@id/imgDirection"
            android:id="@+id/tvActionDesti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/actionDesti"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorTextDirection"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mk_type="FishSpinner"
        app:mk_color="@color/colorBackground"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
